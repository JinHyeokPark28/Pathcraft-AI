<Window x:Class="PathcraftAI.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PathcraftAI.UI"
        Title="PathcraftAI - POE Build Search"
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        Background="#2A2A2A"
        Foreground="White">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Border Grid.Row="0" Background="#1A1A1A" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="PathcraftAI" FontSize="18" FontWeight="SemiBold"
                           Foreground="#C47533" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="ConnectPOEButton" Content="Connect POE Account"
                            Margin="0,0,8,0" Click="ConnectPOE_Click"
                            Background="#C47533" Foreground="White" Padding="12,6" BorderThickness="0"/>
                    <Button Content="Settings" Margin="0,0,8,0" Click="Settings_Click"
                            Background="#505050" Foreground="White" Padding="12,6" BorderThickness="0"/>
                    <Button Content="Donate" Margin="0,0,8,0" Click="Donate_Click"
                            Background="#505050" Foreground="White" Padding="12,6" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- League Info Section -->
            <Border Grid.Row="0" Background="#252525"
                    CornerRadius="8" Padding="16" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="LeagueNameText" Text="Current League: Keepers"
                                   FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock x:Name="LeaguePhaseText" Text="League Phase: Mid-Season"
                                   FontSize="12" Foreground="#B0B0B0" Margin="0,4,0,0"/>
                        <TextBlock x:Name="POEAccountText" Text="Not connected"
                                   FontSize="12" Foreground="#808080" Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,16,0"
                                x:Name="CharacterInfoPanel" Visibility="Collapsed">
                        <TextBlock x:Name="MainCharacterText" Text="Main Character: -"
                                   FontSize="12" Foreground="#B0B0B0"/>
                        <TextBlock x:Name="CharacterCountText" Text="Total Characters: 0"
                                   FontSize="11" Foreground="#808080" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="AIAnalysisButton" Content="🤖 AI Analysis"
                                Height="36" Padding="16,0" Margin="0,0,8,0"
                                Click="AIAnalysis_Click" Background="#8A2BE2" Foreground="White" BorderThickness="0"
                                ToolTip="Get AI-powered build analysis (Claude/GPT)"/>
                        <Button x:Name="RefreshButton" Content="Refresh Recommendations"
                                Height="36" Padding="16,0"
                                Click="RefreshButton_Click" Background="#C47533" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Your Current Build Section -->
            <Border x:Name="YourBuildSection" Grid.Row="1" Background="#1E2A32"
                    CornerRadius="8" Padding="16" Margin="0,0,0,16"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Your Current Build"
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="#8AB4F8"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="BuildCharacterName" Text="Character: -"
                                       FontSize="14" Margin="0,0,0,4"/>
                            <TextBlock x:Name="BuildType" Text="Build Type: -"
                                       FontSize="13" Foreground="#B0B0B0" Margin="0,0,0,4"/>
                            <TextBlock x:Name="BuildMainSkill" Text="Main Skill: -"
                                       FontSize="13" Foreground="#B0B0B0" Margin="0,0,0,4"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="BuildUniqueCount" Text="Unique Items: 0"
                                       FontSize="13" Foreground="#B0B0B0" Margin="0,0,0,4"/>
                            <TextBlock x:Name="BuildTotalValue" Text="Estimated Value: ~0c"
                                       FontSize="13" Foreground="#FFD700" Margin="0,0,0,4"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel x:Name="UpgradeSuggestionsPanel" Grid.Row="2" Margin="0,12,0,0"
                                Visibility="Collapsed">
                        <TextBlock Text="Recommended Upgrades:"
                                   FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"
                                   Foreground="#C47533"/>
                        <ItemsControl x:Name="UpgradesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="0,0,0,4" FontSize="12" Foreground="#B0B0B0">
                                        <Run Text="• "/>
                                        <Run Text="{Binding ItemName, Mode=OneWay}" FontWeight="SemiBold" Foreground="White"/>
                                        <Run Text=" (~"/>
                                        <Run Text="{Binding ChaosValue, Mode=OneWay}"/>
                                        <Run Text="c): "/>
                                        <Run Text="{Binding Reason, Mode=OneWay}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Build Comparison Section -->
            <Border x:Name="BuildComparisonSection" Grid.Row="2" Background="#1E322A"
                    CornerRadius="8" Padding="16" Margin="0,0,0,16"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Current vs Target Build Comparison"
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="#8AF88A"/>

                    <!-- Comparison DataGrid -->
                    <DataGrid x:Name="ComparisonGrid" Grid.Row="1"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              Background="Transparent"
                              RowBackground="#252525"
                              AlternatingRowBackground="#2A2A2A"
                              BorderThickness="0"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Margin="0,0,0,16">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Stat" Binding="{Binding Stat}" Width="*" FontWeight="SemiBold"/>
                            <DataGridTextColumn Header="Current" Binding="{Binding CurrentDisplay}" Width="*" FontSize="13"/>
                            <DataGridTextColumn Header="Target" Binding="{Binding TargetDisplay}" Width="*" FontSize="13"/>
                            <DataGridTextColumn Header="Gap" Binding="{Binding GapDisplay}" Width="*" FontSize="13">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="warning">
                                                <Setter Property="Foreground" Value="#FFB74D"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="ok">
                                                <Setter Property="Foreground" Value="#81C784"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Priority Upgrades -->
                    <StackPanel x:Name="PriorityUpgradesPanel" Grid.Row="2"
                                Visibility="Collapsed">
                        <TextBlock Text="Priority Upgrades:"
                                   FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"
                                   Foreground="#C47533"/>
                        <ItemsControl x:Name="PriorityUpgradesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock FontSize="12" Foreground="White" FontWeight="SemiBold">
                                            <Run Text="{Binding Priority}"/>
                                            <Run Text=". "/>
                                            <Run Text="{Binding Description}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Suggestion}"
                                                   FontSize="11" Foreground="#B0B0B0"
                                                   Margin="16,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- AI Analysis Section -->
            <Border x:Name="AIAnalysisSection" Grid.Row="2" Background="#2E1A47"
                    CornerRadius="8" Padding="16" Margin="0,0,0,16"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="🤖 AI Build Analysis" FontSize="16" FontWeight="SemiBold"
                                       Foreground="#DA70D6"/>
                            <TextBlock x:Name="AIProviderText" Text="Provider: Claude Sonnet 3.5"
                                       FontSize="11" Foreground="#B0B0B0" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock x:Name="AITokensText" Text="Tokens: 0 in / 0 out"
                                       FontSize="10" Foreground="#808080" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="AITimeText" Text="0.0s"
                                       FontSize="10" Foreground="#808080" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- AI Analysis Content -->
                    <ScrollViewer Grid.Row="1" MaxHeight="400" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="AIAnalysisText" TextWrapping="Wrap"
                                   FontSize="13" Foreground="White" LineHeight="20"
                                   Padding="12" Background="#1A0A2E"
                                   Text="Click 'AI Analysis' button to get intelligent build insights..."/>
                    </ScrollViewer>

                    <!-- AI Options -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                        <ComboBox x:Name="AIProviderCombo" Width="180" Height="28" Margin="0,0,8,0"
                                  Background="#3A3A3A" Foreground="White" BorderBrush="#505050"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Rule-Based (Free)"/>
                            <ComboBoxItem Content="Claude (Sonnet 3.5)"/>
                            <ComboBoxItem Content="GPT-4o (OpenAI)"/>
                            <ComboBoxItem Content="Both (Compare)"/>
                        </ComboBox>

                        <Button Content="Analyze Again" Height="28" Padding="12,0" Margin="0,0,8,0"
                                Click="AIAnalysis_Click" Background="#8A2BE2" Foreground="White" BorderThickness="0"/>

                        <Button Content="Copy Analysis" Height="28" Padding="12,0"
                                Click="CopyAIAnalysis_Click" Background="#505050" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Upgrade Path Section -->
            <Border x:Name="UpgradePathSection" Grid.Row="4" Background="#322A1E"
                    CornerRadius="8" Padding="16" Margin="0,0,0,16"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Upgrade Path Recommendations"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="#F8C48A"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock x:Name="UpgradeBudgetText" Text="Budget: 100c"
                                       FontSize="13" Foreground="#FFD700"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="UpgradeTotalCostText" Text="Total Cost: 0c"
                                       FontSize="13" Foreground="#B0B0B0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Grid.Row="1" x:Name="UpgradePathDescription"
                               Text="Based on your current build and target POB, here's the recommended upgrade path:"
                               FontSize="12" Foreground="#B0B0B0"
                               Margin="0,0,0,16" TextWrapping="Wrap"/>

                    <!-- Upgrade Steps List -->
                    <ItemsControl x:Name="UpgradeStepsList" Grid.Row="2">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Border Background="#252525" CornerRadius="6"
                                            Padding="12" Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                        <!-- Step Header -->
                                        <Grid Grid.Row="0" Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Background="#C47533"
                                                    CornerRadius="4" Padding="6,2"
                                                    Margin="0,0,8,0">
                                                <TextBlock FontSize="11" FontWeight="Bold" Foreground="White">
                                                    <Run Text="Step "/>
                                                    <Run Text="{Binding Step}"/>
                                                </TextBlock>
                                            </Border>

                                            <TextBlock Grid.Column="1" Text="{Binding Title}"
                                                       FontSize="14" FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Border Background="#505050" CornerRadius="4"
                                                        Padding="6,2" Margin="0,0,8,0">
                                                    <TextBlock Text="{Binding Priority}"
                                                               FontSize="11" Foreground="White"/>
                                                </Border>
                                                <TextBlock FontSize="13" Foreground="#FFD700"
                                                           VerticalAlignment="Center">
                                                    <Run Text="{Binding CostChaos}"/>
                                                    <Run Text="c"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Description -->
                                        <TextBlock Grid.Row="1" Text="{Binding Description}"
                                                   FontSize="12" Foreground="#B0B0B0"
                                                   Margin="0,0,0,8"/>

                                        <!-- Impact -->
                                        <TextBlock Grid.Row="2" FontSize="11" Foreground="#808080"
                                                   Margin="0,0,0,8">
                                            <Run Text="Impact: "/>
                                            <Run Text="{Binding Impact}" FontStyle="Italic"/>
                                        </TextBlock>

                                        <!-- Recommendations -->
                                        <ItemsControl Grid.Row="3" ItemsSource="{Binding Recommendations}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock FontSize="11" Foreground="#A0A0A0"
                                                               Margin="0,0,0,2" TextWrapping="Wrap">
                                                        <Run Text="  • "/>
                                                        <Run Text="{Binding}"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>

                                    <!-- Trade Items Section (if available) -->
                                    <Border Background="#1A1A1A" CornerRadius="6"
                                            Padding="12" Margin="0,0,0,12"
                                            Visibility="{Binding HasTradeItems, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="Available Items on Trade:"
                                                       FontSize="12" FontWeight="SemiBold"
                                                       Foreground="#8AF88A" Margin="0,0,0,8"/>

                                            <ItemsControl Grid.Row="1" ItemsSource="{Binding TradeItems}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#252525" CornerRadius="4"
                                                                Padding="8" Margin="0,0,0,6">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <!-- Item Header -->
                                                                <Grid Grid.Row="0" Margin="0,0,0,4">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" FontSize="11">
                                                                        <Run Text="{Binding Type}" FontWeight="SemiBold" Foreground="White"/>
                                                                        <Run Text=" - " Foreground="#808080"/>
                                                                        <Run Text="{Binding PriceDisplay}" Foreground="#FFD700"/>
                                                                    </TextBlock>

                                                                    <TextBlock Grid.Column="1" Text="{Binding Seller}"
                                                                               FontSize="10" Foreground="#B0B0B0"/>
                                                                </Grid>

                                                                <!-- Whisper Message (truncated) -->
                                                                <TextBlock Grid.Row="1" FontSize="10" Foreground="#808080"
                                                                           TextTrimming="CharacterEllipsis" Margin="0,0,0,4">
                                                                    <Run Text="Whisper: "/>
                                                                    <Run Text="{Binding WhisperPreview}"/>
                                                                </TextBlock>

                                                                <!-- Copy Button -->
                                                                <Button Grid.Row="2" Content="Copy Whisper"
                                                                        FontSize="10" Padding="8,4"
                                                                        Background="#C47533" Foreground="White"
                                                                        BorderThickness="0" Cursor="Hand"
                                                                        Click="CopyWhisper_Click"
                                                                        Tag="{Binding Whisper}"
                                                                        HorizontalAlignment="Left"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- Passive Tree Roadmap Section -->
            <Border x:Name="PassiveTreeSection" Grid.Row="5" Background="#1E2A32"
                    CornerRadius="8" Padding="16" Margin="0,0,0,16"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Passive Tree Roadmap"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="#8AC4F8"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock x:Name="PassiveCurrentLevelText" Text="Lv69"
                                       FontSize="13" Foreground="#FFD700"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="→" FontSize="13" Foreground="#B0B0B0"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="PassiveTargetLevelText" Text="Lv94"
                                       FontSize="13" Foreground="#8AC4F8"
                                       VerticalAlignment="Center" Margin="0,0,16,0"/>
                            <TextBlock x:Name="PassivePointsNeededText" Text="27 points needed"
                                       FontSize="13" Foreground="#B0B0B0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Grid.Row="1" x:Name="PassiveTreeDescription"
                               Text="Step-by-step passive node allocation plan as you level up:"
                               FontSize="12" Foreground="#B0B0B0"
                               Margin="0,0,0,16" TextWrapping="Wrap"/>

                    <!-- Roadmap Stages List -->
                    <ItemsControl x:Name="PassiveRoadmapList" Grid.Row="2">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1A2530" CornerRadius="6"
                                        Padding="12" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Stage Header -->
                                        <Grid Grid.Row="0" Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Background="#33648C"
                                                    CornerRadius="4" Padding="6,2"
                                                    Margin="0,0,8,0">
                                                <TextBlock Text="{Binding LevelRange}"
                                                           FontSize="11" FontWeight="Bold" Foreground="White"/>
                                            </Border>

                                            <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                                       FontSize="12" Foreground="#B0B0B0">
                                                <Run Text="Focus: "/>
                                                <Run Text="{Binding PriorityFocus}" FontWeight="SemiBold" Foreground="#8AC4F8"/>
                                            </TextBlock>

                                            <TextBlock Grid.Column="2" FontSize="13" Foreground="#FFD700"
                                                       VerticalAlignment="Center">
                                                <Run Text="{Binding Points}"/>
                                                <Run Text=" points"/>
                                            </TextBlock>
                                        </Grid>

                                        <!-- Nodes List -->
                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Nodes}"
                                                      Margin="0,0,0,8">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,0,0,6">
                                                        <TextBlock FontSize="12" Foreground="White">
                                                            <Run Text="→ "/>
                                                            <Run Text="{Binding Name}" FontWeight="SemiBold"/>
                                                            <Run Text=" " />
                                                            <Run Text="{Binding TypeDisplay}" Foreground="#FFA500"/>
                                                        </TextBlock>
                                                        <ItemsControl ItemsSource="{Binding StatsDisplay}" Margin="12,2,0,0">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock FontSize="11" Foreground="#A0A0A0">
                                                                        <Run Text="  • "/>
                                                                        <Run Text="{Binding}"/>
                                                                    </TextBlock>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Benefits Summary -->
                                        <TextBlock Grid.Row="2" FontSize="11" Foreground="#808080"
                                                   Margin="0,0,0,4" Text="Gains:"/>

                                        <ItemsControl Grid.Row="3" ItemsSource="{Binding BenefitsDisplay}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock FontSize="11" Foreground="#90C090"
                                                               Margin="12,0,0,2">
                                                        <Run Text="• "/>
                                                        <Run Text="{Binding}"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- Recommendations Section -->
            <Grid Grid.Row="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="ResultsHeader" Grid.Row="0" Text="Recommended Builds"
                           FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ResultsPanel">
                        <!-- Placeholder -->
                        <StackPanel x:Name="PlaceholderPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0">
                            <TextBlock x:Name="PlaceholderText"
                                       TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"
                                       FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,24">
                                <Run Text="🎯 " FontSize="32"/>
                                <LineBreak/>
                                <LineBreak/>
                                <Run Text="지금 하고 있는 빌드와 가장 가까운 빌드를 찾아드립니다!" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                <LineBreak/>
                                <LineBreak/>
