<Window x:Class="PathcraftAI.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PathcraftAI.UI"
        Title="PathcraftAI - POE Build Search"
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        Background="#1E1E2E"
        Foreground="#CDD6F4">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- SC/HC Toggle Button Style -->
        <Style x:Key="LeagueModeToggleStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#7F849C"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#89B4FA"/>
                                <Setter Property="Foreground" Value="#1E1E2E"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="#45475A"/>
                                <Setter Property="Foreground" Value="#CDD6F4"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Border Grid.Row="0" Background="#181825" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="PathcraftAI" FontSize="18" FontWeight="SemiBold"
                               Foreground="#89B4FA" VerticalAlignment="Center"/>

                    <!-- SC/HC Toggle -->
                    <Border Background="#313244" CornerRadius="4" Margin="16,0,0,0" Padding="2">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="SCModeButton" Content="SC"
                                         GroupName="LeagueMode" IsChecked="True"
                                         Checked="LeagueMode_Changed"
                                         Style="{StaticResource LeagueModeToggleStyle}"/>
                            <RadioButton x:Name="HCModeButton" Content="HC"
                                         GroupName="LeagueMode"
                                         Checked="LeagueMode_Changed"
                                         Style="{StaticResource LeagueModeToggleStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="ConnectPOEButton" Content="Connect POE Account"
                            Margin="0,0,8,0" Click="ConnectPOE_Click"
                            Background="#89B4FA" Foreground="#1E1E2E" Padding="12,6" BorderThickness="0"/>
                    <Button Content="POE Trade" Margin="0,0,8,0" Click="OpenTrade_Click"
                            Background="#F9E2AF" Foreground="#1E1E2E" Padding="12,6" BorderThickness="0"
                            ToolTip="POE Trade 검색 창 열기"/>
                    <Button Content="Bookmarks" Margin="0,0,8,0" Click="Bookmarks_Click"
                            Background="#A6E3A1" Foreground="#1E1E2E" Padding="12,6" BorderThickness="0"
                            ToolTip="저장된 빌드 북마크"/>
                    <Button Content="Settings" Margin="0,0,8,0" Click="Settings_Click"
                            Background="#313244" Foreground="#CDD6F4" Padding="12,6" BorderThickness="0"/>
                    <Button Content="Donate" Margin="0,0,8,0" Click="Donate_Click"
                            Background="#313244" Foreground="#CDD6F4" Padding="12,6" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content with Tabs -->
        <TabControl x:Name="MainTabControl" Grid.Row="1" Margin="16"
                    Background="Transparent" BorderThickness="0">

            <!-- Custom Tab Style -->
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#262638"/>
                    <Setter Property="Foreground" Value="#BAC2DE"/>
                    <Setter Property="Padding" Value="16,8"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" Background="{TemplateBinding Background}"
                                        CornerRadius="6,6,0,0" Padding="{TemplateBinding Padding}" Margin="0,0,4,0">
                                    <ContentPresenter ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#89B4FA"/>
                                        <Setter Property="Foreground" Value="#1E1E2E"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#45475A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Tab 1: Browse Builds -->
            <TabItem Header="🔍 Browse Builds">
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Section -->
                    <Border Grid.Row="0" Background="#262638" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <!-- Filters Row -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Class Filter -->
                                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                    <TextBlock Text="클래스" FontSize="11" Margin="0,0,0,4" Foreground="#BAC2DE"/>
                                    <ComboBox x:Name="ClassFilterCombo" Width="120" Height="28"
                                              Background="#313244" Foreground="#CDD6F4" BorderBrush="#45475A"
                                              SelectionChanged="ClassFilter_SelectionChanged">
                                        <ComboBoxItem Content="All Classes" IsSelected="True"/>
                                        <ComboBoxItem Content="Witch"/>
                                        <ComboBoxItem Content="Shadow"/>
                                        <ComboBoxItem Content="Ranger"/>
                                        <ComboBoxItem Content="Duelist"/>
                                        <ComboBoxItem Content="Marauder"/>
                                        <ComboBoxItem Content="Templar"/>
                                        <ComboBoxItem Content="Scion"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Sort Filter -->
                                <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                    <TextBlock Text="정렬" FontSize="11" Margin="0,0,0,4" Foreground="#BAC2DE"/>
                                    <ComboBox x:Name="SortFilterCombo" Width="130" Height="28"
                                              Background="#313244" Foreground="#CDD6F4" BorderBrush="#45475A"
                                              SelectionChanged="SortFilter_SelectionChanged">
                                        <ComboBoxItem Content="조회수 높은순" IsSelected="True"/>
                                        <ComboBoxItem Content="최신순"/>
                                        <ComboBoxItem Content="좋아요순"/>
                                        <ComboBoxItem Content="가격 낮은순"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Budget Filter -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="예산 (Chaos)" FontSize="11" Margin="0,0,0,4" Foreground="#BAC2DE"/>
                                    <ComboBox x:Name="BudgetFilterCombo" Width="110" Height="28"
                                              Background="#313244" Foreground="#CDD6F4" BorderBrush="#45475A"
                                              SelectionChanged="BudgetFilter_SelectionChanged">
                                        <ComboBoxItem Content="전체"/>
                                        <ComboBoxItem Content="~50c"/>
                                        <ComboBoxItem Content="~100c" IsSelected="True"/>
                                        <ComboBoxItem Content="~500c"/>
                                        <ComboBoxItem Content="~1000c"/>
                                        <ComboBoxItem Content="1000c+"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Search Row -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="⭐ 스트리머/유튜버 검색" FontSize="12" Margin="0,0,0,4" Foreground="#F38BA8"/>
                                    <TextBox x:Name="StreamerInputBox"
                                             Height="32" Padding="8" FontSize="12"
                                             Background="#313244" Foreground="#CDD6F4" BorderBrush="#45475A"
                                             Text="예: Zizaran, Steelmage, Pohx..."
                                             GotFocus="StreamerInputBox_GotFocus"/>
                                </StackPanel>

                                <Button Grid.Column="1" Content="🔍 검색" Height="32" Width="100"
                                        Margin="16,18,0,0" VerticalAlignment="Bottom"
                                        Background="#CBA6F7" Foreground="#1E1E2E" BorderThickness="0"
                                        Click="SearchBuilds_Click" FontWeight="SemiBold" FontSize="12"/>

                                <Button x:Name="RefreshButton" Grid.Column="2" Content="↻ 자동 추천" Height="32"
                                        Margin="8,18,0,0" Padding="12,0" VerticalAlignment="Bottom"
                                        Background="#89B4FA" Foreground="#1E1E2E" BorderThickness="0"
                                        Click="RefreshButton_Click" FontSize="12"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Build Results -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <WrapPanel x:Name="ResultsPanel" Orientation="Horizontal" ItemWidth="340" ItemHeight="Auto">
                            <StackPanel x:Name="PlaceholderPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0">
                                <TextBlock x:Name="PlaceholderText"
                                           TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"
                                           FontSize="14" Foreground="#B0B0B0" Margin="0,0,0,24">
                                    <Run Text="🎯 " FontSize="32"/>
                                    <LineBreak/>
                                    <LineBreak/>
                                    <Run Text="스트리머 이름을 입력하고 검색하거나" FontSize="16" FontWeight="SemiBold" Foreground="#CDD6F4"/>
                                    <LineBreak/>
                                    <Run Text="'자동 추천' 버튼을 클릭하세요!" FontSize="16" FontWeight="SemiBold" Foreground="#CDD6F4"/>
                                </TextBlock>
                            </StackPanel>
                        </WrapPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Tab 2: My Build -->
            <TabItem Header="📊 My Build">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- POB Input Section -->
                        <Border Grid.Row="0" Background="#262638" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="📋 내 빌드 POB (링크, 코드 또는 파일)" FontSize="12" Margin="0,0,0,4" Foreground="#89B4FA"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="POBInputBox" Grid.Column="0"
                                                 Height="32" Padding="8" FontSize="12"
                                                 Background="#313244" Foreground="#CDD6F4" BorderBrush="#45475A"
                                                 Text="URL 또는 POB 코드 붙여넣기"
                                                 GotFocus="POBInputBox_GotFocus"
                                                 ToolTip="pobb.in URL 또는 POB 코드"/>
                                        <Button Grid.Column="1" Content="📁" Height="32" Width="32"
                                                Margin="4,0,0,0" Background="#45475A" Foreground="#CDD6F4"
                                                BorderThickness="0" FontSize="14"
                                                Click="BrowsePOBFile_Click"
                                                ToolTip="로컬 POB .xml 파일 열기"/>
                                    </Grid>
                                </StackPanel>

                                <Button Grid.Column="1" Content="📊 분석" Height="32"
                                        Margin="16,18,0,0" Padding="16,0" VerticalAlignment="Bottom"
                                        Background="#A6E3A1" Foreground="#1E1E2E" BorderThickness="0"
                                        Click="AnalyzeMyBuild_Click" FontWeight="SemiBold" FontSize="12"/>

                                <Button x:Name="AIAnalysisButton" Grid.Column="2" Content="🤖 AI 분석" Height="32"
                                        Margin="8,18,0,0" Padding="12,0" VerticalAlignment="Bottom"
                                        Background="#CBA6F7" Foreground="#1E1E2E" BorderThickness="0"
                                        Click="AIAnalysis_Click" FontSize="12"/>
                            </Grid>
                        </Border>

                        <!-- Filter Generation Section -->
                        <Border x:Name="FilterGenerationSection" Grid.Row="1" Background="#262638" CornerRadius="8" Padding="16" Margin="0,0,0,16"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="🎯 아이템 필터 생성" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#89B4FA"/>
                                <TextBlock Text="POB 빌드를 기반으로 진행 단계별 아이템 필터를 생성합니다." FontSize="11" Foreground="#7F849C" Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="계정 이름:" FontSize="12" Foreground="#BAC2DE" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBox x:Name="FilterAccountNameBox" Width="120" Height="28" Padding="6,4" FontSize="11"
                                                 Background="#313244" Foreground="#CDD6F4" BorderBrush="#45475A"
                                                 ToolTip="필터 파일명에 사용될 계정 이름"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0,0,0">
                                        <TextBlock Text="단계:" FontSize="12" Foreground="#BAC2DE" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <ComboBox x:Name="FilterPhaseComboBox" Width="100" Height="28" FontSize="11"
                                                  Background="#313244" Foreground="#CDD6F4" BorderBrush="#45475A">
                                            <ComboBoxItem Content="All" IsSelected="True"/>
                                            <ComboBoxItem Content="Starter"/>
                                            <ComboBoxItem Content="Mid"/>
                                            <ComboBoxItem Content="End"/>
                                            <ComboBoxItem Content="HighEnd"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <Button Grid.Column="2" Content="필터 생성" Height="28"
                                            Padding="16,0" Background="#F9E2AF" Foreground="#1E1E2E"
                                            BorderThickness="0" FontWeight="SemiBold" FontSize="11"
                                            Click="GenerateFilter_Click"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Leveling Guide Section -->
                        <Border x:Name="LevelingGuideSection" Grid.Row="2" Background="#262638" CornerRadius="8" Padding="16" Margin="0,0,0,16"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="📚 레벨링 가이드" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#A6E3A1"/>
                                <TextBlock Text="메인 스킬 태그를 기반으로 생성된 레벨링 가이드입니다." FontSize="11" Foreground="#7F849C" Margin="0,0,0,12"/>

                                <!-- Main Skill Info -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock x:Name="LevelingMainSkillText" Text="Main Skill: -" FontSize="12" Foreground="#CDD6F4" FontWeight="SemiBold"/>
                                        <TextBlock x:Name="LevelingTagsText" Text="Tags: -" FontSize="11" Foreground="#BAC2DE" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <Button Grid.Column="1" x:Name="OpenYouTubeGuideButton" Content="YouTube 검색" Height="28"
                                            Padding="12,0" Background="#F38BA8" Foreground="#1E1E2E"
                                            BorderThickness="0" FontSize="11"
                                            Click="OpenYouTubeGuide_Click"/>
                                </Grid>

                                <!-- Tips -->
                                <TextBlock Text="Tips:" FontSize="12" Foreground="#89B4FA" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ItemsControl x:Name="LevelingTipsList" Margin="0,0,0,12">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="11" Foreground="#BAC2DE" Margin="8,2,0,2" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Gem Progression -->
                                <TextBlock Text="Gem Progression:" FontSize="12" Foreground="#89B4FA" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ItemsControl x:Name="GemProgressionList" Margin="0,0,0,12">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2,0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Level, StringFormat='Lv {0}:'}" FontSize="11" Foreground="#F9E2AF" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Gems}" FontSize="11" Foreground="#CDD6F4"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Leveling Gear -->
                                <TextBlock Text="Leveling Gear:" FontSize="12" Foreground="#89B4FA" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ItemsControl x:Name="LevelingGearList" Margin="0,0,0,12">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2,0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Level, StringFormat='Lv {0}:'}" FontSize="11" Foreground="#F9E2AF" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1" FontSize="11" Foreground="#CDD6F4">
                                                    <Run Text="{Binding Item, Mode=OneWay}"/>
                                                    <Run Text=" - " Foreground="#7F849C"/>
                                                    <Run Text="{Binding Reason, Mode=OneWay}" Foreground="#BAC2DE"/>
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Ascendancy Order -->
                                <TextBlock Text="Ascendancy Order:" FontSize="12" Foreground="#89B4FA" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ItemsControl x:Name="AscendancyOrderList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="11" Foreground="#CDD6F4" Margin="8,2,0,2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- League Info (Compact) -->
                        <Border Grid.Row="3" Background="#262638" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock x:Name="LeagueNameText" Text="League: Keepers"
                                               FontSize="12" Foreground="#BAC2DE" Margin="0,0,16,0"/>
                                    <TextBlock x:Name="DivineRateText" Text="1 div = 150c"
                                               FontSize="12" Foreground="#F9E2AF" Margin="0,0,16,0"
                                               Cursor="Hand" MouseEnter="DivineRateText_MouseEnter">
                                        <TextBlock.ToolTip>
                                            <ToolTip x:Name="DivineRateTooltip">
                                                <TextBlock x:Name="DivineConversionText" Text="Loading..."/>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                    <TextBlock x:Name="POEAccountText" Text="Not connected"
                                               FontSize="12" Foreground="#7F849C"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal"
                                            x:Name="CharacterInfoPanel" Visibility="Collapsed">
                                    <TextBlock x:Name="MainCharacterText" Text="Character: -"
                                               FontSize="12" Foreground="#BAC2DE"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Your Current Build Section -->
                        <Border x:Name="YourBuildSection" Grid.Row="4" Background="#262638"
                                CornerRadius="8" Padding="16" Margin="0,0,0,16"
                                Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Your Current Build"
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="#89B4FA"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="BuildCharacterName" Text="Character: -"
                                       FontSize="14" Foreground="#CDD6F4" Margin="0,0,0,4"/>
                            <TextBlock x:Name="BuildType" Text="Build Type: -"
                                       FontSize="13" Foreground="#BAC2DE" Margin="0,0,0,4"/>
                            <TextBlock x:Name="BuildMainSkill" Text="Main Skill: -"
                                       FontSize="13" Foreground="#BAC2DE" Margin="0,0,0,4"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock x:Name="BuildUniqueCount" Text="Unique Items: 0"
                                       FontSize="13" Foreground="#BAC2DE" Margin="0,0,0,4"/>
                            <TextBlock x:Name="BuildTotalValue" Text="Estimated Value: ~0c"
                                       FontSize="13" Foreground="#F9E2AF" Margin="0,0,0,4"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel x:Name="UpgradeSuggestionsPanel" Grid.Row="2" Margin="0,12,0,0"
                                Visibility="Collapsed">
                        <TextBlock Text="Recommended Upgrades:"
                                   FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"
                                   Foreground="#89B4FA"/>
                        <ItemsControl x:Name="UpgradesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" FontSize="12" Foreground="#BAC2DE" VerticalAlignment="Center">
                                            <Run Text="• "/>
                                            <Run Text="{Binding ItemName, Mode=OneWay}" FontWeight="SemiBold" Foreground="#CDD6F4"/>
                                            <Run Text=" (~"/>
                                            <Run Text="{Binding ChaosValue, Mode=OneWay, StringFormat=F0}"/>
                                            <Run Text="c): "/>
                                            <Run Text="{Binding Reason, Mode=OneWay}"/>
                                        </TextBlock>
                                        <Button Grid.Column="1" Content="🔍 Trade"
                                                Click="OpenTradeUrl_Click"
                                                Tag="{Binding TradeUrl}"
                                                Visibility="{Binding HasTradeUrl, Converter={StaticResource BoolToVisibilityConverter}}"
                                                Background="#313244" Foreground="#89B4FA"
                                                BorderBrush="#45475A" BorderThickness="1"
                                                Padding="6,2" Margin="8,0,0,0"
                                                FontSize="10" Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#45475A"/>
                                                            <Setter Property="Foreground" Value="#CDD6F4"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>

                        <!-- Build Comparison Section -->
                        <Border x:Name="BuildComparisonSection" Grid.Row="5" Background="#262638"
                                CornerRadius="8" Padding="16" Margin="0,0,0,16"
                                Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Current vs Target Build Comparison"
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"
                               Foreground="#A6E3A1"/>

                    <!-- Comparison DataGrid -->
                    <DataGrid x:Name="ComparisonGrid" Grid.Row="1"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              Background="Transparent"
                              RowBackground="#313244"
                              AlternatingRowBackground="#262638"
                              BorderThickness="0"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Margin="0,0,0,16">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Stat" Binding="{Binding Stat}" Width="*" FontWeight="SemiBold"/>
                            <DataGridTextColumn Header="Current" Binding="{Binding CurrentDisplay}" Width="*" FontSize="13"/>
                            <DataGridTextColumn Header="Target" Binding="{Binding TargetDisplay}" Width="*" FontSize="13"/>
                            <DataGridTextColumn Header="Gap" Binding="{Binding GapDisplay}" Width="*" FontSize="13">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="warning">
                                                <Setter Property="Foreground" Value="#F9E2AF"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="ok">
                                                <Setter Property="Foreground" Value="#A6E3A1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Priority Upgrades -->
                    <StackPanel x:Name="PriorityUpgradesPanel" Grid.Row="2"
                                Visibility="Collapsed">
                        <TextBlock Text="Priority Upgrades:"
                                   FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"
                                   Foreground="#89B4FA"/>
                        <ItemsControl x:Name="PriorityUpgradesList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock FontSize="12" Foreground="#CDD6F4" FontWeight="SemiBold">
                                            <Run Text="{Binding Priority}"/>
                                            <Run Text=". "/>
                                            <Run Text="{Binding Description}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Suggestion}"
                                                   FontSize="11" Foreground="#BAC2DE"
                                                   Margin="16,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>

                        <!-- AI Analysis Section -->
                        <Border x:Name="AIAnalysisSection" Grid.Row="6" Background="#262638"
                                CornerRadius="8" Padding="16" Margin="0,0,0,16"
                                Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="🤖 AI Build Analysis" FontSize="16" FontWeight="SemiBold"
                                       Foreground="#CBA6F7"/>
                            <TextBlock x:Name="AIProviderText" Text="Provider: Claude Sonnet 3.5"
                                       FontSize="11" Foreground="#BAC2DE" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock x:Name="AITokensText" Text="Tokens: 0 in / 0 out"
                                       FontSize="10" Foreground="#7F849C" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="AITimeText" Text="0.0s"
                                       FontSize="10" Foreground="#7F849C" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- AI Analysis Content -->
                    <ScrollViewer Grid.Row="1" MaxHeight="400" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="AIAnalysisText" TextWrapping="Wrap"
                                   FontSize="13" Foreground="#CDD6F4" LineHeight="20"
                                   Padding="12" Background="#181825"
                                   Text="Click 'AI Analysis' button to get intelligent build insights..."/>
                    </ScrollViewer>

                    <!-- AI Options -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                        <ComboBox x:Name="AIProviderCombo" Width="180" Height="28" Margin="0,0,8,0"
                                  Background="#313244" Foreground="#CDD6F4" BorderBrush="#45475A"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Rule-Based (Free)"/>
                            <ComboBoxItem Content="Upgrade Guide"/>
                            <ComboBoxItem Content="Claude (Sonnet 3.5)"/>
                            <ComboBoxItem Content="GPT-4o (OpenAI)"/>
                            <ComboBoxItem Content="Gemini (Google)"/>
                            <ComboBoxItem Content="Both (Compare)"/>
                        </ComboBox>

                        <Button Content="Analyze Again" Height="28" Padding="12,0" Margin="0,0,8,0"
                                Click="AIAnalysis_Click" Background="#CBA6F7" Foreground="#1E1E2E" BorderThickness="0"/>

                        <Button Content="Copy Analysis" Height="28" Padding="12,0"
                                Click="CopyAIAnalysis_Click" Background="#313244" Foreground="#CDD6F4" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>

                        <!-- Upgrade Path Section -->
                        <Border x:Name="UpgradePathSection" Grid.Row="7" Background="#262638"
                                CornerRadius="8" Padding="16" Margin="0,0,0,16"
                                Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Upgrade Path Recommendations"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="#89B4FA"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock x:Name="UpgradeBudgetText" Text="Budget: 100c"
                                       FontSize="13" Foreground="#F9E2AF"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="UpgradeTotalCostText" Text="Total Cost: 0c"
                                       FontSize="13" Foreground="#BAC2DE"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Grid.Row="1" x:Name="UpgradePathDescription"
                               Text="Based on your current build and target POB, here's the recommended upgrade path:"
                               FontSize="12" Foreground="#BAC2DE"
                               Margin="0,0,0,16" TextWrapping="Wrap"/>

                    <!-- Upgrade Steps List -->
                    <ItemsControl x:Name="UpgradeStepsList" Grid.Row="2">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Border Background="#313244" CornerRadius="6"
                                            Padding="12" Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                        <!-- Step Header -->
                                        <Grid Grid.Row="0" Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Background="#89B4FA"
                                                    CornerRadius="4" Padding="6,2"
                                                    Margin="0,0,8,0">
                                                <TextBlock FontSize="11" FontWeight="Bold" Foreground="#1E1E2E">
                                                    <Run Text="Step "/>
                                                    <Run Text="{Binding Step}"/>
                                                </TextBlock>
                                            </Border>

                                            <TextBlock Grid.Column="1" Text="{Binding Title}"
                                                       FontSize="14" FontWeight="SemiBold" Foreground="#CDD6F4"
                                                       VerticalAlignment="Center"/>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Border Background="#45475A" CornerRadius="4"
                                                        Padding="6,2" Margin="0,0,8,0">
                                                    <TextBlock Text="{Binding Priority}"
                                                               FontSize="11" Foreground="#CDD6F4"/>
                                                </Border>
                                                <TextBlock FontSize="13" Foreground="#F9E2AF"
                                                           VerticalAlignment="Center">
                                                    <Run Text="{Binding CostChaos}"/>
                                                    <Run Text="c"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Description -->
                                        <TextBlock Grid.Row="1" Text="{Binding Description}"
                                                   FontSize="12" Foreground="#BAC2DE"
                                                   Margin="0,0,0,8"/>

                                        <!-- Impact -->
                                        <TextBlock Grid.Row="2" FontSize="11" Foreground="#7F849C"
                                                   Margin="0,0,0,8">
                                            <Run Text="Impact: "/>
                                            <Run Text="{Binding Impact}" FontStyle="Italic"/>
                                        </TextBlock>

                                        <!-- Recommendations -->
                                        <ItemsControl Grid.Row="3" ItemsSource="{Binding Recommendations}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock FontSize="11" Foreground="#7F849C"
                                                               Margin="0,0,0,2" TextWrapping="Wrap">
                                                        <Run Text="  • "/>
                                                        <Run Text="{Binding Mode=OneWay}"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>

                                    <!-- Trade Items Section (if available) -->
                                    <Border Background="#181825" CornerRadius="6"
                                            Padding="12" Margin="0,0,0,12"
                                            Visibility="{Binding HasTradeItems, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="Available Items on Trade:"
                                                       FontSize="12" FontWeight="SemiBold"
                                                       Foreground="#A6E3A1" Margin="0,0,0,8"/>

                                            <ItemsControl Grid.Row="1" ItemsSource="{Binding TradeItems}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#313244" CornerRadius="4"
                                                                Padding="8" Margin="0,0,0,6">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <!-- Item Header -->
                                                                <Grid Grid.Row="0" Margin="0,0,0,4">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <TextBlock Grid.Column="0" FontSize="11">
                                                                        <Run Text="{Binding Type}" FontWeight="SemiBold" Foreground="#CDD6F4"/>
                                                                        <Run Text=" - " Foreground="#7F849C"/>
                                                                        <Run Text="{Binding PriceDisplay}" Foreground="#F9E2AF"/>
                                                                    </TextBlock>

                                                                    <TextBlock Grid.Column="1" Text="{Binding Seller}"
                                                                               FontSize="10" Foreground="#BAC2DE"/>
                                                                </Grid>

                                                                <!-- Whisper Message (truncated) -->
                                                                <TextBlock Grid.Row="1" FontSize="10" Foreground="#7F849C"
                                                                           TextTrimming="CharacterEllipsis" Margin="0,0,0,4">
                                                                    <Run Text="Whisper: "/>
                                                                    <Run Text="{Binding WhisperPreview, Mode=OneWay}"/>
                                                                </TextBlock>

                                                                <!-- Action Buttons -->
                                                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                                                    <Button Content="Copy Whisper"
                                                                            FontSize="10" Padding="8,4"
                                                                            Background="#89B4FA" Foreground="#1E1E2E"
                                                                            BorderThickness="0" Cursor="Hand"
                                                                            Click="CopyWhisper_Click"
                                                                            Tag="{Binding Whisper}"
                                                                            Margin="0,0,8,0"/>
                                                                    <Button Content="Open Trade"
                                                                            FontSize="10" Padding="8,4"
                                                                            Background="#F9E2AF" Foreground="#1E1E2E"
                                                                            BorderThickness="0" Cursor="Hand"
                                                                            Click="OpenTradeForItem_Click"
                                                                            Tag="{Binding Name}"
                                                                            ToolTip="POE Trade에서 이 아이템 검색"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

                        <!-- Passive Tree Roadmap Section -->
                        <Border x:Name="PassiveTreeSection" Grid.Row="8" Background="#1E2A32"
                                CornerRadius="8" Padding="16" Margin="0,0,0,16"
                                Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Passive Tree Roadmap"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="#8AC4F8"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock x:Name="PassiveCurrentLevelText" Text="Lv69"
                                       FontSize="13" Foreground="#FFD700"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="→" FontSize="13" Foreground="#B0B0B0"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="PassiveTargetLevelText" Text="Lv94"
                                       FontSize="13" Foreground="#8AC4F8"
                                       VerticalAlignment="Center" Margin="0,0,16,0"/>
                            <TextBlock x:Name="PassivePointsNeededText" Text="27 points needed"
                                       FontSize="13" Foreground="#B0B0B0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Grid.Row="1" x:Name="PassiveTreeDescription"
                               Text="Step-by-step passive node allocation plan as you level up:"
                               FontSize="12" Foreground="#B0B0B0"
                               Margin="0,0,0,16" TextWrapping="Wrap"/>

                    <!-- Roadmap Stages List -->
                    <ItemsControl x:Name="PassiveRoadmapList" Grid.Row="2">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1A2530" CornerRadius="6"
                                        Padding="12" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Stage Header -->
                                        <Grid Grid.Row="0" Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Background="#33648C"
                                                    CornerRadius="4" Padding="6,2"
                                                    Margin="0,0,8,0">
                                                <TextBlock Text="{Binding LevelRange}"
                                                           FontSize="11" FontWeight="Bold" Foreground="White"/>
                                            </Border>

                                            <TextBlock Grid.Column="1" VerticalAlignment="Center"
                                                       FontSize="12" Foreground="#B0B0B0">
                                                <Run Text="Focus: "/>
                                                <Run Text="{Binding PriorityFocus}" FontWeight="SemiBold" Foreground="#8AC4F8"/>
                                            </TextBlock>

                                            <TextBlock Grid.Column="2" FontSize="13" Foreground="#FFD700"
                                                       VerticalAlignment="Center">
                                                <Run Text="{Binding Points}"/>
                                                <Run Text=" points"/>
                                            </TextBlock>
                                        </Grid>

                                        <!-- Nodes List -->
                                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Nodes}"
                                                      Margin="0,0,0,8">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,0,0,6">
                                                        <TextBlock FontSize="12" Foreground="White">
                                                            <Run Text="→ "/>
                                                            <Run Text="{Binding Name}" FontWeight="SemiBold"/>
                                                            <Run Text=" " />
                                                            <Run Text="{Binding TypeDisplay}" Foreground="#FFA500"/>
                                                        </TextBlock>
                                                        <ItemsControl ItemsSource="{Binding StatsDisplay}" Margin="12,2,0,0">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock FontSize="11" Foreground="#A0A0A0">
                                                                        <Run Text="  • "/>
                                                                        <Run Text="{Binding Mode=OneWay}"/>
                                                                    </TextBlock>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Benefits Summary -->
                                        <TextBlock Grid.Row="2" FontSize="11" Foreground="#808080"
                                                   Margin="0,0,0,4" Text="Gains:"/>

                                        <ItemsControl Grid.Row="3" ItemsSource="{Binding BenefitsDisplay}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock FontSize="11" Foreground="#90C090"
                                                               Margin="12,0,0,2">
                                                        <Run Text="• "/>
                                                        <Run Text="{Binding Mode=OneWay}"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

                        <!-- Farming Strategy Section -->
                        <Border x:Name="FarmingStrategySection" Grid.Row="9" Background="#262638"
                                CornerRadius="8" Padding="16" Margin="0,0,0,16"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="🗺️ 파밍 전략 추천" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="#F9E2AF"/>
                                <TextBlock Text="빌드 특성에 맞는 최적의 파밍 전략입니다." FontSize="11" Foreground="#7F849C" Margin="0,0,0,12"/>

                                <!-- Build Tags -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <TextBlock Text="빌드 태그: " FontSize="11" Foreground="#BAC2DE" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="FarmingBuildTagsText" Text="-" FontSize="11" Foreground="#89B4FA" FontWeight="SemiBold"/>
                                </StackPanel>

                                <!-- Strategies List -->
                                <ItemsControl x:Name="FarmingStrategiesList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#313244" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                                                <StackPanel>
                                                    <!-- Strategy Header -->
                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="13" FontWeight="SemiBold" Foreground="#CDD6F4"/>
                                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                            <Border Background="#45475A" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                                                                <TextBlock Text="{Binding InvestmentDisplay}" FontSize="10" Foreground="#BAC2DE"/>
                                                            </Border>
                                                            <Border Background="#A6E3A1" CornerRadius="4" Padding="6,2">
                                                                <TextBlock Text="{Binding ReturnsDisplay}" FontSize="10" Foreground="#1E1E2E" FontWeight="SemiBold"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </Grid>

                                                    <!-- Description -->
                                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#BAC2DE" Margin="0,0,0,8"/>

                                                    <!-- Recommended Maps -->
                                                    <TextBlock Text="추천 맵:" FontSize="11" Foreground="#89B4FA" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                                    <ItemsControl ItemsSource="{Binding Maps}" Margin="0,0,0,8">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock FontSize="10" Foreground="#CDD6F4" Margin="8,2,0,2">
                                                                    <Run Text="• "/>
                                                                    <Run Text="{Binding Name, Mode=OneWay}" FontWeight="SemiBold"/>
                                                                    <Run Text=" (T"/>
                                                                    <Run Text="{Binding Tier, Mode=OneWay}"/>
                                                                    <Run Text=", "/>
                                                                    <Run Text="{Binding Layout, Mode=OneWay}"/>
                                                                    <Run Text=")"/>
                                                                </TextBlock>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                    <!-- Atlas Passives -->
                                                    <TextBlock Text="아틀라스 패시브:" FontSize="11" Foreground="#89B4FA" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                                    <ItemsControl ItemsSource="{Binding AtlasPassives}" Margin="0,0,0,8">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" FontSize="10" Foreground="#F9E2AF" Margin="8,1,0,1"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                    <!-- Tips -->
                                                    <TextBlock Text="팁:" FontSize="11" Foreground="#89B4FA" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                                    <ItemsControl ItemsSource="{Binding Tips}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding}" FontSize="10" Foreground="#7F849C" Margin="8,1,0,1" TextWrapping="Wrap"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- General Tips -->
                                <TextBlock Text="일반 팁:" FontSize="12" Foreground="#89B4FA" FontWeight="SemiBold" Margin="0,8,0,4"/>
                                <ItemsControl x:Name="FarmingGeneralTipsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="11" Foreground="#BAC2DE" Margin="8,2,0,2" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        </Grid>
                </ScrollViewer>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
