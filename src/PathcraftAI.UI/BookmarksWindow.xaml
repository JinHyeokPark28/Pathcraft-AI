<Window x:Class="PathcraftAI.UI.BookmarksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Build Bookmarks" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#1e1e2e">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Build Bookmarks"
                       FontSize="20" FontWeight="Bold" Foreground="#cdd6f4"/>

            <TextBlock x:Name="BookmarkCountText" Grid.Column="1"
                       FontSize="12" Foreground="#7f849c"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Search Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox" Grid.Column="0"
                     Background="#313244" Foreground="#cdd6f4"
                     BorderBrush="#45475a" BorderThickness="1"
                     Padding="10,8" FontSize="12"
                     KeyDown="SearchBox_KeyDown"/>

            <Button Grid.Column="1" Content="Search"
                    Padding="16,8" Margin="8,0,0,0"
                    Background="#89b4fa" Foreground="#1e1e2e"
                    BorderThickness="0" FontSize="12"
                    Click="Search_Click"/>
        </Grid>

        <!-- Bookmarks List -->
        <Border Grid.Row="2" Background="#181825" CornerRadius="8">
            <ListView x:Name="BookmarksList"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="#cdd6f4"
                      SelectionMode="Single"
                      MouseDoubleClick="BookmarksList_MouseDoubleClick">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#262638" CornerRadius="6"
                                Padding="12" Margin="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Build Name -->
                                <TextBlock Grid.Row="0" Text="{Binding BuildName}"
                                           FontSize="14" FontWeight="SemiBold"
                                           Foreground="#cdd6f4"/>

                                <!-- Class & Skill -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal"
                                            Margin="0,4,0,0">
                                    <TextBlock FontSize="11" Foreground="#89b4fa">
                                        <Run Text="{Binding ClassName}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding MainSkill}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="11" Foreground="#7f849c" Margin="12,0,0,0">
                                        <Run Text="Lv"/>
                                        <Run Text="{Binding Level}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Notes & Date -->
                                <Grid Grid.Row="2" Margin="0,4,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Notes}"
                                               FontSize="10" Foreground="#7f849c"
                                               TextTrimming="CharacterEllipsis"/>

                                    <TextBlock Grid.Column="1" FontSize="10" Foreground="#585b70">
                                        <Run Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                    </TextBlock>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Delete" Padding="16,8" Margin="0,0,8,0"
                    Background="#f38ba8" Foreground="#1e1e2e"
                    BorderThickness="0" FontSize="12"
                    Click="Delete_Click"/>
            <Button Content="Load POB" Padding="16,8" Margin="0,0,8,0"
                    Background="#a6e3a1" Foreground="#1e1e2e"
                    BorderThickness="0" FontSize="12"
                    Click="LoadPOB_Click"/>
            <Button Content="Close" Padding="16,8"
                    Background="#45475a" Foreground="#cdd6f4"
                    BorderThickness="0" FontSize="12"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
